{
  "servers": {
    "github": {
      "type": "stdio",
      "command": "npm",
      "args": ["run", "mcp-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_TOKEN}"
      }
    },
    "filesystem": {
      "type": "stdio", 
      "command": "npm",
      "args": ["run", "mcp-filesystem"]
    },

    "memory": {
      "type": "stdio",
      "command": "npm",
      "args": ["run", "mcp-memory"]
    }
  }
}
